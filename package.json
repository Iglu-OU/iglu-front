{
  "name": "iglu-front",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@babel/core": "^7.6.4",
    "@storybook/react": "^5.2.3",
    "@testing-library/react": "^9.3.0",
    "@types/classnames": "^2.2.9",
    "@types/jest": "^24.0.18",
    "@types/node": "12.7.12",
    "@types/react": "16.9.5",
    "@types/react-dom": "16.9.1",
    "@typescript-eslint/eslint-plugin": "^2.3.3",
    "@typescript-eslint/parser": "^2.3.3",
    "babel-loader": "^8.0.6",
    "classnames": "^2.2.6",
    "eslint-config-prettier": "^6.4.0",
    "eslint-config-react": "^1.1.7",
    "eslint-config-react-app": "^5.0.2",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.8",
    "jest-cli": "^24.9.0",
    "jest-junit": "^8.0.0",
    "jest-mock-now": "^1.2.1",
    "lighthousebot": "https://github.com/GoogleChromeLabs/lighthousebot",
    "lint-staged": "^9.4.2",
    "node-sass": "^4.13.1",
    "prettier": "^1.18.2",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "react-scripts": "3.2.0",
    "ts-jest": "^24.1.0",
    "typescript": "3.6.4"
  },
  "devDependencies": {
    "cross-env": "^6.0.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:coverage": "cross-env CI=true react-scripts test --env=jsdom",
    "lint": "eslint ./src/**/*.{ts,tsx}",
    "lint:fix": "eslint ./src/**/*.{ts,tsx} --fix",
    "storybook": "start-storybook",
    "eject": "react-scripts eject",
    "lh": "lighthousebot -- https://iglu-react-front.netlify.com/"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test:coverage"
    }
  },
  "lint-staged": {
    "**/*.{ts, tsx}": [
      "eslint --fix",
      "git add"
    ],
    "**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
