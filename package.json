{
  "name": "iglu-front",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "yarn storybook",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:coverage": "cross-env CI=true react-scripts test --env=jsdom",
    "lint": "eslint ./src/**/*.{ts,tsx} --fix",
    "storybook": "start-storybook -p 6006 -s public",
    "lh": "lighthousebot -- https://iglu-react-front.netlify.com/",
    "build-storybook": "build-storybook -s public"
  },
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.3"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@storybook/addon-actions": "^6.0.21",
    "@storybook/addon-essentials": "^6.0.21",
    "@storybook/addon-links": "^6.0.21",
    "@storybook/node-logger": "^6.0.21",
    "@storybook/preset-create-react-app": "^3.1.4",
    "@storybook/react": "^6.0.21",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.0.2",
    "@testing-library/user-event": "^12.1.4",
    "@types/classnames": "^2.2.9",
    "@types/jest": "^26.0.13",
    "@types/node": "^14.6.4",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/storybook__react": "^5.2.1",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "classnames": "^2.2.6",
    "cross-env": "^7.0.2",
    "eslint-config-prettier": "^6.4.0",
    "eslint-config-react-app": "^5.0.2",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "eslint-plugin-testing-library": "^3.8.0",
    "husky": "^4.3.0",
    "lighthousebot": "https://github.com/GoogleChromeLabs/lighthousebot",
    "lint-staged": "^10.3.0",
    "node-sass": "^4.12.0",
    "prettier": "^2.1.1",
    "react-is": "^16.13.1",
    "typescript": "^4.0.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test:coverage"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": "eslint --fix",
    "**/*.{js,jsx,ts,tsx,json,css,scss,md}": "prettier --write"
  }
}
